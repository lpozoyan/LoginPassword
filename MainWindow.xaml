<Window x:Class="LoginPassword.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginPassword"
        mc:Ignorable="d"
        Title="Вход" Height="250" Width="230" MinHeight="250" MinWidth="230" MaxHeight="250" MaxWidth="230">
    <Grid>
        <StackPanel>
            <Label Margin="10">Введите логин (adm)</Label>
            <TextBox Name="tbLogin" Margin="10"  Width="190" HorizontalAlignment="Left"/>
            <Label Margin="10">Введите пароль (132)</Label>
            <TextBox Name="tbPassword" Margin="10" Width="190" HorizontalAlignment="Left"/>
            <Button Name="btnLogin" Click="btnLogin_Click" Margin="10" Width="190" HorizontalAlignment="Left">Вход</Button>
        </StackPanel>
        
    </Grid>
</Window>
